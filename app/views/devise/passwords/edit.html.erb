<div class=form-holder>
  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "New password" %><br />
      <%= f.password_field :password, class: "area", placeholder: "Password (#{@minimum_password_length}) characters minimum", autofocus: true, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, class: "area", placeholder: "Confirm new password", autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Change my password", class: "sign-up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>